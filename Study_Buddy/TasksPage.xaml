                        </StackLayout>
                    </StackLayout>
                </Frame>

                
            </StackLayout>
        </ScrollView>
        <Button Clicked="AddTask_Clicked" Text="Add Task" CharacterSpacing="3" FontAttributes="Bold" TextColor="White" FontSize="20" CornerRadius="20" Padding="40,20" BorderColor="#CD9A68"
                VerticalOptions="End">
            <Button.Shadow>
                <Shadow Brush="#373737" Offset="0,3" Radius="10" Opacity="0.4"/>
            </Button.Shadow>
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#DFB386" Offset="0" />
