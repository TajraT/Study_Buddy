                    <StackLayout Margin="10" Orientation="Horizontal">
                        <CheckBox Color="#CD9A68" HorizontalOptions="Start"/>
                        <StackLayout Margin="5">
                            <Label Text="Task 1" FontSize="20" FontAttributes="Bold" TextColor="#373737"/>
                            <Label Text="Opis ili plan rada" TextColor="#373737" FontSize="16"/>
                        </StackLayout>
                        <StackLayout HorizontalOptions="EndAndExpand" VerticalOptions="Center" Margin="10">
                            <Button BackgroundColor="#AA1C1E" Text="Delete"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                <Frame Padding="0" CornerRadius="20" HasShadow="True">
