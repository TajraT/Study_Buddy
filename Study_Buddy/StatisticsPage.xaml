<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Study_Buddy.StatisticsPage"
             Title="Statistics"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <RadialGradientBrush Center="0.5,0.5" Radius="0.8">
            <GradientStop Color="#fffefd" Offset="0.0" />
            <GradientStop Color="#DFB386" Offset="1.0" />
        </RadialGradientBrush>
    </ContentPage.Background>

    <StackLayout Padding="20" Spacing="20">

        <Label Text="Focus Time (Last 7 Days)" FontSize="24" FontAttributes="Bold" TextColor="#373737" HorizontalOptions="Center"/>

        <GraphicsView x:Name="ChartView" HeightRequest="300"/>

        <Label Text="Minutes per day" FontSize="14" TextColor="#555" HorizontalOptions="Center"/>

    </StackLayout>
</ContentPage>
